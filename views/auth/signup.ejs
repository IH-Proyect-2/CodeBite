<div class="container">
  <div class="row auth">
    <h4 class="center-align teal-text">Create your Code Bites account</h4>
    <p></p>
    <form class="col s12" action="/signup" method="post">

      <div class="row">
        <div class="input-field col s12">
          <input id="last_name" type="text" class="validate" name="username" placeholder="Name">
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="text" class="validate" name="email" placeholder="Email">
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate" name="password" placeholder="Password">
        </div>
      </div>

      <div class="center-btn">
        <button class="btn waves-effect waves-light red darken-1 center" type="submit" name="action" value="Submit">Let's GO!
      </button>
        <br></br>
      </div>

    </form>
  </div>
</div>
